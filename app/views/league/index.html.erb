            <%= label_tag :summoner, 'search for a summoner '%>
            <%= text_field_tag :summoner, nil, placeholder: 'Faker', class: 'form-control' %>
			<span class="material-symbols-outlined input-group-btn">
			<%=  button_tag 'Search', class: 'btn btn-transparent ' %>
			</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>


